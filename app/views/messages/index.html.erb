<%= link_to "投稿画面へ", new_message_path %>
<% @messages.each do |message| %>
  <p>
    <%= message.name %>
    <%= message.age %>
    <%# <%= link_to "詳細", show_message_path(message) %> 
    <%= link_to "編集", edit_message_path(message) %>
    <%= link_to "削除", message_path(message), method: :delete, data: {confirm: "削除しますか?"} %>

  </p>
<% end %>